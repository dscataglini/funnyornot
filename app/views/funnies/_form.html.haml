= form_for @funny,  html: { multipart: true } do |f|
  - if @funny.errors.any?
    #error_explanation
      %h2= "#{pluralize(@funny.errors.count, "error")} prohibited this funny from being saved:"
      %ul
        - @funny.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :pic
    = f.file_field :pic
  .actions
    = f.submit 'Save'
